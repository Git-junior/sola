<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @photo.content %>
      </p>
      <% if user_signed_in? && current_user.id == @photo.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_photo_path(@photo), class: :prototype__btn %>
          <%= link_to "削除する", photo_path(@photo), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @photo.image %>
      </div>
    </div>
  </div>
</main>
